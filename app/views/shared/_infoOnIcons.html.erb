<!-- Button trigger modal -->
	<button type="button" class="btn btn-success ml-2" data-toggle="modal" data-target="#exampleModal">
	  ?
	</button>

	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	  <div class="modal-dialog modal-md" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title" id="exampleModalLabel">Help</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        <div class="card text-align-center" style="border-color: rgba(216, 216, 216, 0.8); border-width: 5px; width: 20rem;">
				Grey border = pending action.
			</div>
			<br>
			<div class="card" style="border-color: rgba(255, 191, 0, 0.2); border-width: 5px; width: 20rem;">
				Yellow border = confirmed.
			</div>
			<br>
			<div class="card" style="border-color: rgba(0, 59, 0, 0.2); border-width: 5px; width: 20rem;">
				Green border = completed.
			</div>
			<br>
			<div class="card" style="border-color: rgba(118, 0, 0, 0.2); border-width: 5px; width: 20rem;">
				Red border = incomplete.
			</div>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	      </div>
	    </div>
	  </div>
	</div>