<% if user_signed_in? %>
<%= render template: "components/navbarLoggedIn"%>
<% else %>
<%= render template: "components/navbarNewUser"%>
<% end %>

<h1>Create a new task.</h1>

<%= form_with scope: :task, url: tasks_path, local: true do |form| %>

  <p>
    <%= form.label :task_name %><br>
    <%= form.text_field :task_name %>
  </p>

  <p>
    <%= form.label :task_description %><br>
    <%= form.text_area :task_description %>
  </p>

  <p>
    <%= form.label :created_at %><br>
	<%= select_date Date.today, prefix: :created_at %>
	<%= select_time Time.new, prefix: :created_at %>
  </p>

   <p>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
  </p>

  <p>
    <%= form.label :negotiable %><br>   
	<%= radio_button_tag(:negotiable, true) %>
	<%= label_tag(:negotiable, "Yes") %>
	<%= radio_button_tag(:negotiable, false) %>
	<%= label_tag(:negotiable, "No") %>
  </p>

  <p>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

