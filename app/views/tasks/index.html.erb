<% if user_signed_in? %>
<%= render template: "components/navbarLoggedIn"%>
<% else %>
<%= render template: "components/navbarNewUser"%>
<% end %>

<h1>Here are all your tasks.</h1>

<table>
  <tr>
    <th>Task Name</th>
    <th>Description</th>
    <th>Start Time</th>
    <th>Price</th>
    <th>Negotiable</th>
    <th>Created On:</th>
    <th>Confirmed</th>
    <th>Completed</th>
    <th>Incomplete</th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.task_name %></td>
      <td><%= task.task_description %></td>
      <td>$<%= task.start_time %></td>
      <td><%= task.price %></td>
      <td><%= task.negotiable %></td>
      <td>$<%= task.created_at %></td>
      <td><%= task.confirmed %></td>
      <td><%= task.completed %></td>
      <td>$<%= task.incomplete %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Destroy', task_path(task),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New task', new_task_path %>

