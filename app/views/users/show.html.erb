<style>
.profile-header{
  position:relative;
  display:flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: flex-start;
  min-height:280px;
  max-height:320px;
  min-width:300px;
  background-color:turquoise;
  overflow: hidden;
  font-size:35px;
	top:-10px;
	height:20px;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.profile-pic{
	border-radius:100px;
}

.mainprofilecontent{
	text-align: center
}
</style>

<header class="profile-header">
	<%= image_tag("homepage/emptyprofile.jpeg",size: "180x180", :class => "profile-pic") %>
	<h1>
	<%= @user.username %>
</h1>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
  Edit Profile
</button>
</header>

<ul class="nav nav-tabs justify-content-center">
  <li class="nav-item">
    <a class="nav-link active" href="#">Info</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Tasks Completed</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/tasks">Tasks Given</a>
  </li>
</ul>

<dl class="row" style="width:900px; ">
  <dt class="col-sm-3">E-mail:</dt>
  <dd class="col-sm-9"><%= @user.email %></dd>

  <dt class="col-sm-3">Name:</dt>
  <dd class="col-sm-9">
    <p><%= @user.name %></p>
  </dd>

  </dd>
</dl>
<% unless @user.avatar_url.nil? %>
	<%= image_tag @user.avatar_url %><br />
<% end %>







<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header" style="background-color:turquoise;">
        <h5 class="modal-title" id="exampleModalLongTitle">Edit Your Profile</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
<%= form_for(:user, as: :user, url: registration_path(:user), html: { method: :put }) do |f| %>

  <div class="flexbox-container">

  	  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

    <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  	</div>

	<div class="field1">
  <%= f.label :username %><br />
  <%= f.text_field :username, autofocus: true %>
	</div>

	  <div class="field1">
  <%= f.label :phone %><br />
  <%= f.text_field :phone, autofocus: true %>
	</div>


  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

    <div class="field">
<legend>Avatar</legend>
<%= f.file_field :avatar %>
  </div>


  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



<%= @user.email %>
<%= @user.name %>